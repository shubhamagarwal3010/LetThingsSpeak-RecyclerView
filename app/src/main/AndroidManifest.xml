<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iot.letthingsspeak">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/RoomTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/RoomTheme.NoActionBar"/>
        <activity android:name=".login.LoginActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".splashscreen.SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.iot.letthingsspeak.device.DeviceActivity"
            android:resizeableActivity="true" />
        <activity android:name="com.iot.letthingsspeak.room.AddRoom" />
        <activity android:name="com.iot.letthingsspeak.device.AddDevice"></activity>
    </application>

</manifest>