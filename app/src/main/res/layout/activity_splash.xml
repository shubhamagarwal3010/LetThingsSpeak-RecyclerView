<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04AAC0"
    tools:context="com.iot.letthingsspeak.splashscreen.SplashActivity">

    <FrameLayout
        android:id="@+id/fragment_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/app_image_view"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/smarthome" />

    <TextView
        android:id="@+id/app_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_image_view"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:layout_margin="5dp"
        android:fontFamily="sans-serif"
        android:text="@string/letthingsspeak"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/splash_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        app:indicatorName="BallSpinFadeLoaderIndicator" />
</RelativeLayout>
